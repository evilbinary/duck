import os

Import('env')

arch =env['ARCH']

source=[
    'arch.c',
    'lock.c',
    'pmemory.c',
    'interrupt.c'
]

source+=Glob(arch+'/*.c')
source+=Glob(arch+'/*.s')

env.Library('arch', source,
    CPPPATH=[
    '.',
    '../libs/include/archcommon',
    '../',
    '../libs/include',
    '../platform/',
    '../platform/'+env.get('PLATFORM') 
    ],
    LIBPATH=['.',
    '../platform/',
    '../libs/libarchcommon/'
    ],
    LIBS=['archcommon','platform'],
    CFLAGS='$CFLAGS')